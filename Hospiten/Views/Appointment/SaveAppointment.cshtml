@using Hospiten.Core.Application.ViewModel.Appointment;
@model SaveAppointmentViewModel

@{
    bool editMode = Model.Patient_Id != 0;
    ViewData["Title"] = editMode ? "Editar cita" : "Guardar cita";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Appointment" asp-action="@(editMode ? "Edit" : "Create")">

                        <div class="mb-3">
                            <label asp-for="Patient_Id" class="form-label">Paciente:</label>
                            <select asp-for="Patient_Id" asp-items="@(new SelectList(Model.Patients, "Patient_Id", "Name"))" class="form-control">
                                <option value="0">Seleccione un paciente</option>

                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Doctor_Id" class="form-label">Paciente:</label>
                            <select asp-for="Doctor_Id" asp-items="@(new SelectList(Model.Doctors, "Doctor_Id", "Name"))" class="form-control">
                                <option value="0">Seleccione un Doctor</option>

                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Ap_Date" class="form-label">fecha:</label>
                            <input type="date" asp-for="Ap_Date" class="form-control" />
                            <span asp-validation-for="Ap_Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ap_hour" class="form-label">fecha:</label>
                            <input type="time" asp-for="Ap_hour" class="form-control" />
                            <span asp-validation-for="Ap_hour" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ap_Status" class="form-label">Teléfono:</label>
                            <input type="tel" asp-for="Ap_Status" class="form-control" />
                        </div>

                   
                        <input type="hidden" asp-for="Ap_Id" />

                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Appointment" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>