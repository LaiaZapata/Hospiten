@using Hospiten.Core.Application.ViewModel.Doctor;
@model SaveDoctorViewModel

@{
    bool editMode = Model.Doctor_Id != 0;
    ViewData["Title"] = editMode ? "Editar doctor" : "Guardar doctor";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@(editMode ? $"Editando al doctor: {Model.Name} {Model.lastname}" : "Creando un nuevo doctor")</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Doctor" asp-action="@(editMode ? "Edit" : "Create")">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nombre:</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="lastname" class="form-label">Apellido:</label>
                            <input type="text" asp-for="lastname" class="form-control" />
                            <span asp-validation-for="lastname" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="photo" class="form-label">Foto:</label>
                            <input type="text" asp-for="photo" class="form-control" />
                            <span asp-validation-for="photo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="email" class="form-label">Correo Electrónico:</label>
                            <input type="email" asp-for="email" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="phone_Number" class="form-label">Teléfono:</label>
                            <input type="tel" asp-for="phone_Number" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cedula" class="form-label">Cédula:</label>
                            <input type="text" asp-for="Cedula" class="form-control" />
                        </div>

                        <input type="hidden" asp-for="Doctor_Id" />

                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Doctor" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
