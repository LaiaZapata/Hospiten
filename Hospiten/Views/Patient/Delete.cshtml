@using Hospiten.Core.Application.ViewModel.Patient;
@model SavePatientViewModel
@{
    ViewData["Title"] = "Elimianr producto";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Esta seguro que desea eliminar el Paciente @Model.Name?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Patient" asp-action="DeletePost">

                    <input type="hidden" asp-for="Patient_Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Patient" asp-action="Index" class="btn btn-warning">Cancelar</a>

                </form>

            </div>
        </div>
    </div>

</div>

